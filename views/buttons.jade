block buttons

    .buttons

        form(method="get" action="/fetch_picture")
            input.btn.btn-info.btn-lg.btn-block#today(name='today' value="Today's Picture" type='submit')
            input.btn.btn-info.btn-lg.btn-block#random(name='random' value="Random Picture" type='submit')

        form.my_favorites(method="get" action="/favorites")
            input.btn.btn-primary.btn-lg.btn-block#myfavorites(name='favorites' value="View Or Edit My Favorite Pictures" type='submit')

        form.get_favorites(method="get" action="/showfaves")
            input.btn.btn-primary.btn-lg#userfavorites(name='userfavorites' value="Find Favorite Pictures for User:" type='submit')
            span
                input#pickuser(name="pickuser" type=text)

        form.finduser(method="get" action="/")
            input.btn.btn-info.btn-lg.btn-block#homepage(name="homepage" value="Home Page" type='submit')

        form.logout(method="get" action="/logout")
            input.btn.btn-info.btn-lg.btn-block#logout(name="logout" value="Log Out" type='submit')